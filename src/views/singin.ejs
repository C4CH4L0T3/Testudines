  <body class="text-center">

    <main class="form-signin w-100 m-auto  h-100">
  

    <!---->
    <div
    class="modal modal-signin position-static d-block py-5"
    tabindex="-1"
    role="dialog"
    id="modalSignin"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content rounded-4 shadow">
        <a href="/">
          <img
            class=""
            src="/img/Mi proyecto.png"
            alt="Logo"
            width="200"
            height="200"
          />
        </a>
        <div class="  pb-4 border-bottom-0">
          <!-- <h1 class="modal-title fs-5" >Modal title</h1> -->
          <h1 class="fw-bold mb-0 fs-2">Registrate</h1>
        </div>

        <form action="/registrar" method="post">
        <div class="modal-body p-5 pt-0">
        
          
          
          <div class="form-floating mb-3">
            <input
              type="email"
              class="form-control"
              id="floatingInput"
              placeholder="correo@ejemplo.com"
              name="correo"
            />
          <label for="floatingInput">Direccion de Email</label>
        </div>
        <div class="form-floating mb-3">
          <input
          type="text"
          class="form-control d-grid gap-2 col-6 mx-auto"
          id="floatingPassword"
          placeholder="Nombre"
          name="nombre"
        />
        <label for="floatingPassword">Nombre de usuario</label>
        </div>
            <div class="form-floating mb-3">
              <input
              type="password"
              class="form-control"
              id="floatingPassword"
              placeholder="Password"
              name="contraseña"
            />
            <input type="hidden" name="rol" value="user">
            <label for="floatingPassword">Contraseña</label>

           
            </div>
          
        
 
           
     


            <button
              class="w-100 mb-2 btn btn-lg rounded-3 btn-primary"
              type="submit"
              id="comment-btn"
            >
              Ingresar
            </button>

        
            
            <p class="mt-5 mb-3 text-muted">
              ¿Ya tienes una cuenta?
              <a href="/login" class="link-primary">Ingresa</a>
            </p>
          </form>
        </div>
      </div>
    </div>
